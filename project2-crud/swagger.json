{
  "swagger": "2.0",
  "info": {
    "title": "Bookstore API",
    "description": "Welcome to the Bookstore",
    "version": "1.0.0"
  },
  "host": "cse341-crud-70bp.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Hello world"],
        "description": "Welcome to the Bookstore API",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/books": {
      "get": {
        "summary": "Get all books",
        "responses": {
          "200": {
            "description": "List of books"
          }
        }
      },
      "post": {
        "summary": "Create a new book",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "book",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "201": { "description": "Book created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "summary": "Get a book by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Book found" },
          "404": { "description": "Book not found" }
        }
      },
      "put": {
        "summary": "Update a book",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "book",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "200": { "description": "Book updated" },
          "400": { "description": "Invalid input" }
        }
      },
      "delete": {
        "summary": "Delete a book",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "Book deleted" },
          "404": { "description": "Book not found" }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "required": ["title", "author"],
      "properties": {
        "title": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "genre": {
          "type": "string"
        },
        "publishedDate": {
          "type": "integer"
        },
        "summary": {
          "type": "string"
        }
      }
    }
  }
}
